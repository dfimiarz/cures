<!doctype html>
<html class="no-js" lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title>{% block title %}Starter page{% endblock %}</title>
        {% block styles %}
            <link rel="stylesheet" href="{{asset("resources/vendor/twitter-bootstrap/css/bootstrap.css")}}" />
        {% endblock %}
    </head>
    <body id="home">

        <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
            <div class="container">
                <a href="index.html" class="navbar-brand">CCNY CRUES</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav ml-auto">
                        {% block menuItems %}
                            <li>
                                <a href="#home" class="nav-link">Home</a>
                            </li>
                            <li>
                                <a href="#new" class="nav-link">New request</a>
                            </li>
                            <li>
                                <a href="#contact" class="nav-link">Contact</a>
                            </li>
                            <li>
                                <a href="#help" class="nav-link">About</a>
                            </li>
                        {% endblock %}
                    </ul>
                </div>
            </div>
        </nav>

        {% block content %}
            <h1>Hello, world!</h1>
        {% endblock %}

        {% block javascript %}
            <script src="{{asset("resources/vendor/jquery/jquery.min.js")}}"></script>
            <script src="{{asset("resources/vendor/popper.js/popper.min.js")}}"></script>
            <script src="{{asset("resources/vendor/twitter-bootstrap/js/bootstrap.js")}}"></script>
        {% endblock %}
    </body>
</html>
